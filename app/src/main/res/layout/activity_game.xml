<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".GameActivity"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="-20dp">


    <TextView
        android:id="@+id/computerPlayerLockedAnswerMatch"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:layout_marginEnd="5dp"
        android:alpha="0.5"
        android:background="@drawable/boxselected"
        android:paddingTop="13dp"
        android:text="EQUAL"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/computerLockedAnswerLower"
        app:layout_constraintEnd_toStartOf="@+id/computerLockedAnswerJoker" />

    <TextView
        android:id="@+id/playerLockedAnswerMatch"

        android:layout_width="95dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:alpha="0.5"
        android:background="@drawable/boxselected"
        android:paddingTop="13dp"
        android:text="EQUAL"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/playerLockedAnswerHigher"
        app:layout_constraintStart_toEndOf="@+id/playerLockedAnswerJoker" />

    <TextView
        android:id="@+id/computerLockedAnswerJoker"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:alpha="0.5"
        android:background="@drawable/boxselected"
        android:paddingTop="13dp"
        android:text="JOKER"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/computerLockedAnswerHigher"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/computerLockedAnswerHigher"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:alpha="0.5"
        android:background="@drawable/boxselected"
        android:paddingTop="13dp"
        android:text="HIGHER"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/displayedComputerPlayerCard"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/computerLockedAnswerLower"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:alpha="0.5"
        android:background="@drawable/boxselected"
        android:paddingTop="13dp"
        android:text="LOWER"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/displayedComputerPlayerCard"
        app:layout_constraintEnd_toStartOf="@+id/computerLockedAnswerHigher" />

    <TextView
        android:id="@+id/playerLockedAnswerLower"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="7dp"
        android:alpha="0.5"
        android:background="@drawable/boxselected"
        android:paddingTop="13dp"
        android:text="LOWER"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/playerCoverCard"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/playerLockedAnswerHigher"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="7dp"
        android:alpha="0.5"
        android:background="@drawable/boxselected"
        android:paddingTop="13dp"
        android:text="HIGHER"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/playerCoverCard"
        app:layout_constraintStart_toEndOf="@+id/playerLockedAnswerLower" />

    <TextView
        android:id="@+id/playerLockedAnswerJoker"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:alpha="0.5"
        android:background="@drawable/boxselected"
        android:paddingTop="13dp"
        android:text="JOKER"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/playerLockedAnswerHigher"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/scoreComputerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/computerPlayerCoverCard"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/border2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000000"
        android:text="border"
        app:layout_constraintBottom_toTopOf="@+id/playerLockedAnswerMatch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/displayedComputerCard"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/covercard" />

    <ImageView
        android:id="@+id/covercardBottom"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@+id/displayedComputerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/covercard" />

    <ImageView
        android:id="@+id/covercardMiddle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/covercard" />

    <ImageView
        android:id="@+id/covercardTop"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/covercard" />


    <TextView
        android:id="@+id/cardsLeftBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/playerCoverCardBottom"
        android:layout_width="159dp"
        android:layout_height="201dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/covercard" />

    <ImageView
        android:id="@+id/playerCoverCard"
        android:layout_width="159dp"
        android:layout_height="201dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/covercard" />

    <ImageView
        android:id="@+id/displayedPlayerCard"
        android:layout_width="179dp"
        android:layout_height="202dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/covercard" />

    <ImageView
        android:id="@+id/computerPlayerCoverCardBottom"
        android:layout_width="159dp"
        android:layout_height="201dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/covercard" />

    <ImageView
        android:id="@+id/computerPlayerCoverCard"
        android:layout_width="159dp"
        android:layout_height="201dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/covercard" />

    <ImageView
        android:id="@+id/displayedComputerPlayerCard"
        android:layout_width="179dp"
        android:layout_height="202dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/covercard" />

    <TextView
        android:id="@+id/scorePlayerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:padding="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="298dp" />

    <ImageView
        android:id="@+id/closeImageView"
        android:layout_width="39dp"
        android:layout_height="33dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close" />


    <FrameLayout
        android:id="@+id/containerPlayer"
        android:layout_width="139dp"
        android:layout_height="119dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/displayedComputerPlayerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerLockedAnswerLower">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/containerComputer"
        android:layout_width="139dp"
        android:layout_height="119dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/computerPlayerCoverCard"
        app:layout_constraintStart_toEndOf="@+id/displayedPlayerCard"
        app:layout_constraintTop_toBottomOf="@+id/computerLockedAnswerHigher">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_robot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/playerLockedAnswerMatch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayedComputerCard" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="CardioBot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scoreComputerTextView"
        app:layout_constraintStart_toStartOf="@+id/displayedComputerPlayerCard"
        app:layout_constraintTop_toBottomOf="@+id/displayedComputerPlayerCard" />

</androidx.constraintlayout.widget.ConstraintLayout>